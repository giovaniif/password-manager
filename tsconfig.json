{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "paths": {
      "@shared/*": [
        "shared/*"
      ],
      "@domains/*": [
        "domains/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@errors/*": [
        "errors/*"
      ],
      "@dtos/*": [
        "dtos/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  }
}